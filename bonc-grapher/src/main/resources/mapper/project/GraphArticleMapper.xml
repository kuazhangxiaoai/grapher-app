<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bonc.graph.project.mapper.GraphArticleMapper">
    <resultMap id="ArticleMap" type="Article" >
        <result property="articleId"    column="article_id"    />
        <result property="articleName"    column="article_name"    />
        <result property="createMethod"    column="create_method"    />
        <result property="fileName"    column="file_name"    />
        <result property="fileType"    column="file_type"    />
        <result property="fileSize"    column="file_size"    />
        <result property="fileUrl"    column="file_url"    />
        <result property="topicId"    column="topic_id"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>
    <!-- 新增图谱-->
    <insert id="addArticle" parameterType="Article">
        insert into graph_article
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="articleId != null and articleId != ''">article_id,</if>
            <if test="articleName != null and articleName != ''">article_name,</if>
            <if test="createMethod != null and createMethod != ''">create_method,</if>
            <if test="fileName != null and fileName != ''">file_name,</if>
            <if test="fileUrl != null and fileUrl != ''">file_url,</if>
            <if test="fileType != null and fileType != ''">file_type,</if>
            <if test="fileSize != null and fileSize != ''">file_size,</if>
            <if test="topicId != null and topicId != ''">topic_id,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="articleId != null and articleId != ''">#{articleId},</if>
            <if test="articleName != null and articleName != ''">#{articleName},</if>
            <if test="createMethod != null and createMethod != ''">#{createMethod},</if>
            <if test="fileName != null and fileName != ''">#{fileName},</if>
            <if test="fileUrl != null and fileUrl != ''">#{fileUrl},</if>
            <if test="fileType != null and fileType != ''">#{fileType},</if>
            <if test="fileSize != null and fileSize != ''">#{fileSize},</if>
            <if test="topicId != null and topicId != ''">#{topicId},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
        </trim>
    </insert>

    <update id="updateArticle">
        update graph_article
        <trim prefix="SET" suffixOverrides=",">
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="articleName != null">article_name = #{articleName},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where article_id = #{articleId}
    </update>

    <update id="deleteArticle">
        update graph_article
        <trim prefix="SET" suffixOverrides=",">
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where article_id = #{articleId}
    </update>


</mapper>